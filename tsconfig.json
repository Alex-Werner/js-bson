{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018"
        ],
        "outDir": "lib",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "types": [
            "@types/node",
            "@types/long"
        ],
        "allowJs": false,
        "noEmit": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts",
        "interfaces/**.d.ts"
    ]
}