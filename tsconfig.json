{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018"
        ],
        "outDir": "lib",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "types": [
            "@types/node"
        ],
        "allowJs": true,
        "noEmit": false,
        "declaration": false,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.d.ts",
        "src/**/*.ts"
    ]
}